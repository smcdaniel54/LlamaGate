# LlamaGate Configuration
# Copy this file to .env and customize as needed
# Environment variables set directly will override .env file values

# Ollama server URL
OLLAMA_HOST=http://localhost:11434

# API key for authentication (leave empty to disable authentication)
API_KEY=sk-llamagate

# Rate limit (requests per second)
RATE_LIMIT_RPS=10

# Enable debug logging (true/false)
DEBUG=false

# Server port
PORT=8080

# Log file path (leave empty to log only to console)
# If set, logs will be written to both console and file
LOG_FILE=
