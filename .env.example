# LlamaGate Configuration
# Copy this file to .env and customize as needed

# Ollama server URL
OLLAMA_HOST=http://localhost:11434

# API key for authentication (leave empty to disable authentication)
# Generate a secure key: openssl rand -hex 32
API_KEY=

# Rate limit (requests per second)
RATE_LIMIT_RPS=10

# Enable debug logging (true/false)
DEBUG=false

# Server port
PORT=8080

# Log file path (leave empty to log only to console)
LOG_FILE=

# HTTP client timeout for Ollama requests (e.g., 5m, 30s, 30m - max 30 minutes)
TIMEOUT=5m

# MCP Configuration (optional)
# Enable MCP client functionality
MCP_ENABLED=false

# Maximum tool execution rounds
MCP_MAX_TOOL_ROUNDS=10

# Maximum tool calls per round
MCP_MAX_TOOL_CALLS_PER_ROUND=10

# Default timeout for tool execution
MCP_DEFAULT_TOOL_TIMEOUT=30s

# Maximum tool result size in bytes (1MB default)
MCP_MAX_TOOL_RESULT_SIZE=1048576

# Comma-separated glob patterns for allowed tools (empty = allow all)
# Example: MCP_ALLOW_TOOLS=mcp.*.read_file,mcp.*.write_file
MCP_ALLOW_TOOLS=

# Comma-separated glob patterns for denied tools (empty = deny none)
# Example: MCP_DENY_TOOLS=mcp.*.delete_file,mcp.*.format_disk
MCP_DENY_TOOLS=
