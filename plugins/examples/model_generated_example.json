{
  "name": "sentiment_analyzer",
  "version": "1.0.0",
  "description": "Analyzes sentiment of text input using LLM",
  "author": "Model Generated",
  "input_schema": {
    "type": "object",
    "properties": {
      "text": {
        "type": "string",
        "description": "Text to analyze for sentiment"
      },
      "detail_level": {
        "type": "string",
        "enum": ["basic", "detailed"],
        "default": "basic",
        "description": "Level of detail in analysis"
      }
    },
    "required": ["text"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "sentiment": {
        "type": "string",
        "enum": ["positive", "negative", "neutral"],
        "description": "Overall sentiment"
      },
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "description": "Confidence score"
      },
      "explanation": {
        "type": "string",
        "description": "Explanation of the sentiment analysis"
      }
    }
  },
  "required_inputs": ["text"],
  "optional_inputs": {
    "detail_level": "basic"
  },
  "workflow": {
    "id": "sentiment_analysis_workflow",
    "name": "Sentiment Analysis Workflow",
    "description": "Analyzes text sentiment using LLM",
    "steps": [
      {
        "id": "analyze",
        "name": "Analyze Sentiment",
        "description": "Use LLM to analyze sentiment",
        "type": "llm_call",
        "config": {
          "model": "llama3.2",
          "prompt": "Analyze the sentiment of this text: {{text}}. Detail level: {{detail_level}}. Return JSON with sentiment (positive/negative/neutral), confidence (0-1), and explanation."
        }
      }
    ],
    "max_retries": 2,
    "timeout": "30s"
  }
}
